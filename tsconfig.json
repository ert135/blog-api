      "target": "es6",
      "outDir": "dist",
      "module": "commonjs",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "removeComments": false,
      "noImplicitAny": false
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
      "src/**/*",
      "src/**/.json"
    ]
}
